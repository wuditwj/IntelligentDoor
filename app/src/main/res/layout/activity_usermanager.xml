<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.njwyt.intelligentdoor.UserManagerActivity">
    <com.njwyt.view.CustomActionBar
        android:id="@+id/user_manage_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.njwyt.view.CustomActionBar>
    <ListView
        android:id="@+id/user_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/anim_listview_item"
        android:layout_height="match_parent">
    </ListView>
    <Button
        android:id="@+id/add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/simple_button_selector"
        android:text="@string/add_user"
        style="@style/setButtonTv" />

</LinearLayout>
