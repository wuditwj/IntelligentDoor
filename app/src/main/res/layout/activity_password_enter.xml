<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="com.njwyt.intelligentdoor.PasswordEnterActivity" />
    </data>

    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_transparent_2">

            <LinearLayout
                android:id="@+id/ll_base_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_test_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="@string/title_enter_pwd"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(1)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(2)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(3)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="3"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(4)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="4"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(5)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="5"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(6)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="6"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(7)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="7"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(8)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="8"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(9)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="9"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/circular_white_selector"
                        android:onClick="@{() -> activity.btnClick(0)}"
                        android:shadowColor="@color/colorBlack"
                        android:shadowRadius="1"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="?df_20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:shadowColor="@color/colorBlack"
                    android:shadowRadius="1"
                    android:text="@string/cancel"
                    android:textColor="@color/colorWhite"
                    android:textSize="?df_16sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</layout>
