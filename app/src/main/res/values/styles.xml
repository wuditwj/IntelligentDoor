<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Transparent" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="lay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="userSet">
        <item name="android:textSize">?df_20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PasswordInputView">
        <item name="android:layout_marginLeft">@dimen/dp_50</item>
        <item name="android:layout_marginRight">@dimen/dp_50</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">450dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">#ffffff</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">4</item>
        <item name="android:maxEms">4</item>
    </style>

    <style name="PasswordTextView">
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_difficulty_item_layout">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_item_shape</item>
    </style>

    <style name="dialog_difficulty_item_view">
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:background">@color/userSettingBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>

    <style name="dialog_selection_difficulty_text">
        <item name="android:textSize">?df_14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 三种字体大小 -->
    <style name="Default_TextSize_Small">
        <item name="df_14sp">@dimen/sp_12</item>
        <item name="df_16sp">@dimen/sp_14</item>
        <item name="df_18sp">@dimen/sp_16</item>
        <item name="df_20sp">@dimen/sp_18</item>
        <item name="df_22sp">@dimen/sp_20</item>
        <item name="df_24sp">@dimen/sp_22</item>
        <item name="df_30sp">@dimen/sp_28</item>
    </style>

    <!-- 默认为中等大小 -->
    <style name="Default_TextSize_Middle">
        <item name="df_12sp">@dimen/sp_12</item>
        <item name="df_14sp">@dimen/sp_14</item>
        <item name="df_16sp">@dimen/sp_16</item>
        <item name="df_18sp">@dimen/sp_18</item>
        <item name="df_20sp">@dimen/sp_20</item>
        <item name="df_22sp">@dimen/sp_22</item>
        <item name="df_24sp">@dimen/sp_24</item>
        <item name="df_30sp">@dimen/sp_30</item>
    </style>


    <style name="Default_TextSize_Big">
        <item name="df_14sp">@dimen/sp_16</item>
        <item name="df_16sp">@dimen/sp_18</item>
        <item name="df_18sp">@dimen/sp_20</item>
        <item name="df_20sp">@dimen/sp_22</item>
        <item name="df_22sp">@dimen/sp_24</item>
        <item name="df_24sp">@dimen/sp_26</item>
        <item name="df_30sp">@dimen/sp_32</item>
    </style>

    <style name="actionBarTv">
        <item name="android:textSize">?df_20sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="customTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_1</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">?df_16sp</item>
    </style>

    <style name="setButtonTv">
        <item name="android:textSize">?df_14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="item_theme_text">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">?df_14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
